<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:SearchMovies"
            x:Class="SearchMovies.MainPage"
            Title="Movie Search!"
            BarBackgroundColor="Black"
            BackgroundColor="White">
    <NavigationPage Title="Movie Search"
                    BarBackgroundColor="CadetBlue">
        <x:Arguments>
            <local:MovieSearchPage />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Series Search"
                    BarBackgroundColor="MediumAquamarine">
        <x:Arguments>
            <local:SeriesSearchPage />
        </x:Arguments>
    </NavigationPage>
    
</TabbedPage>