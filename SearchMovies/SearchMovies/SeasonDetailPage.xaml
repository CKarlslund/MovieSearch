<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SearchMovies.SeasonDetailPage"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
        <ActivityIndicator x:Name="AIndicator"></ActivityIndicator>
        <ListView x:Name="EpisodeListView" HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Padding="10" Orientation="Vertical">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Episode}" LineBreakMode="WordWrap" FontAttributes="Bold"></Label>
                                        <Label Text="{Binding Title}" LineBreakMode="WordWrap" FontAttributes="Bold"></Label>
                                    </StackLayout>
                                    <StackLayout>
                                        <Label IsVisible ="{Binding IsConnected}" Text="{Binding Plot}" LineBreakMode="WordWrap"></Label>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>